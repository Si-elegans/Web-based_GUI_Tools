<div class="col-sm-12">
<div class="row">
	<div class="col-sm-12">
		<div class="whitefont">Duration</div>
	</div>
</div>
<div class="row">
    <div class="col-sm-12 block">
        <div>
            <input id="experimentDurationSlider" class='simpleSlider' data-slider-id='experimentDurationSlider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="0.1" data-slider-value="14"/>     
        </div>
    </div>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="hcontrols row">
			<div class="col-sm-8">
				{{#if isModifiable}}
				<button  class="btn btn-turquesa" style="margin: 5px" data-toggle="modal" data-target="#newModal">New  Event</button>
				<button {{action 'saveExperiment'}} class="btn btn-turquesa" style="margin: 5px">Save Experiment</button>
				{{/if}}
			</div>
			<div class="col-sm-4">
				<button {{action 'gotoEnvironment'}} class="btn btn-turquesa" style="margin: 5px">Go to Environment</button>
			</div>
		</div>
	</div>
</div>
<div class="row">
{{outlet "properties2"}}
</div>
</div>

<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content color">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">New Stimulus</h4>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="title centered">Event Description</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12 block">
					<input id="createName" class=""></input>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="title centered">Event Duration</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12 block">
					<select class="btn" id="createDuration" onchange="if (this.selectedIndex > -1) newEventTypeSelected(this.selectedIndex);">
						<option>Exact</option>
						<option>Interval</option>
						<option>Permanent</option>
					</select>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="title centered">Event Type</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12 block">
					<select class="btn" id="createType">
						<option id="mechanoOption">Mechanosensation</option>
						<option id="termoOption" disabled>Termotaxis</option>
						<option id="galvanoOption" disabled>Galvanotaxis</option>
						<option id="chemoOption">Chemotaxis</option>
						<option id="photoOption" disabled>Phototaxis</option>
					</select>
				</div>
			</div>
			<div class="modal-footer">
				<button {{action 'createEvent'}} type="button" class="btn btn-turquesa" data-dismiss="modal">Create</button>
				<button type="button" class="btn btn-turquesa" data-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>